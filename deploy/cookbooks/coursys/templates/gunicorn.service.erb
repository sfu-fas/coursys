# adapted from https://docs.gunicorn.org/en/stable/deploy.html#systemd
[Unit]
Description=CourSys gunicorn
After=network.target

[Service]
Type=exec
User=<%= @username %>
Group=<%= @username %>
RuntimeDirectory=gunicorn
WorkingDirectory=<%= @coursys_dir %>
UMask=0077
EnvironmentFile=/etc/profile.d/coursys-environment.sh
ExecStart=/usr/local/bin/gunicorn --workers=10 --worker-class=sync --max-requests=1000 --log-file=<%= @data_root %>/logs/gunicorn-server.log --error-logfile=<%= @data_root %>/logs/gunicorn-error.log --bind 127.0.0.1:8000 courses.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target